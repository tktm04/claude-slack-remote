# Claude Code Slack Remote - Environment Variables
# This file should have permissions 600: chmod 600 ~/.claude-slack-env

# Slack Bot Token (shared across all machines)
export SLACK_BOT_TOKEN="xoxb-YOUR-TOKEN-HERE"

# Channel ID for this machine (each machine gets its own channel)
export SLACK_CHANNEL_ID="C0XXXXXXXXX"

# Display name for this machine
export MACHINE_NAME="Mac"

# Optional: default working directory for daemon
# export CLAUDE_WORK_DIR="$HOME"

# Optional: claude command timeout in seconds (default: 600)
# export CLAUDE_TIMEOUT=600

# Optional: shell command timeout in seconds (default: 30)
# export SHELL_TIMEOUT=30
